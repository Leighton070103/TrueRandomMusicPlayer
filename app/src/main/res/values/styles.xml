<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="general" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">2dp</item>
        <item name="android:background">#D8E0E3</item>
        <item name="android:textColor">#404040</item>
    </style>
    <style name="songPick" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">2dp</item>
        <item name="android:background">#D8E0E3</item>
        <item name="android:textColor">#404040</item>
    </style>
    <style name="editText" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="inputText" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#404040</item>
    </style>
    <style name="general.selected">
        <item name="android:textColor">#C00000</item>
    </style>
    <style name="general.invisible">
        <item name="android:textColor">#B9BDBF</item>
    </style>

</resources>
