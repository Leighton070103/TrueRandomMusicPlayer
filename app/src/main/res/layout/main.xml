<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/manila"
    android:layout_gravity="center_horizontal|center_vertical">

<LinearLayout         
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    
    
<LinearLayout   
    android:id="@+id/mainlayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    
     <Button android:id="@+id/filepickerbutton"
     android:background="@drawable/btn_file_picker"
     android:layout_width="48dp"
     android:layout_height="33dp"
     android:layout_marginRight="12dp"/> 
                
    <ImageView android:id="@+id/albumart"
     android:contentDescription="album art"
     android:layout_width="150dp"
     android:layout_height="150dp"
     android:layout_marginTop="10dp"
     android:layout_marginBottom="10dp"
     android:gravity="center" />      
               
    <Button android:id="@+id/favoritebutton"
        android:background="@mipmap/star_empty_dim"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"/>
</LinearLayout>
        
 
                    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/xparent1" >
                   
        <Button android:id="@+id/randombutton"
        android:background="@mipmap/shuffle"
        android:layout_width="48dp"
        android:layout_height="33dp"   
        android:layout_marginBottom="6dp"                  
        android:layout_marginLeft="10dp" /> 
  
        <TextView
        android:id="@+id/songplaying"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"  
        android:layout_marginBottom="10dp"        
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:lines="1"
        android:scrollHorizontally="true"      
        android:ellipsize="marquee" 
        android:focusable="true"     
        android:focusableInTouchMode="true"          
        android:textColor="@color/text" />           
      </LinearLayout>
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#AA000000" >

             

        <Button android:id="@+id/rewbutton"
            android:background="@drawable/btn_rew"
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:layout_margin="5dp" />         
        <Button android:id="@+id/playpausebutton"
            android:background="@drawable/btn_play"
            android:layout_width="64dp"
            android:layout_height="68dp"
            android:layout_margin="5dp" />
        <Button android:id="@+id/skipbutton"
            android:background="@drawable/btn_ff"
            android:layout_width="64dp"
            android:layout_height="68dp"
            android:layout_margin="5dp" />
        <Button android:id="@+id/stopbutton"
            android:background="@drawable/btn_stop"
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:layout_margin="5dp" />   
     
    </LinearLayout>
     
</LinearLayout>     
 </FrameLayout>