<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.classicgarage.truerandommusicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <application
        android:name=".activity.PlayerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".service.PlayerService" />

        <activity
            android:name=".activity.MusicPlayerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".broadcastreceiver.MusicIntentReceiver">
            <intent-filter>
                <action android:name="android.media.AudioManager.ACTION_AUDIO_BECOMING_NOISY"></action>

                <category android:name="android.intent.categoy.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.SongListActivity"></activity>
    </application>

</manifest>