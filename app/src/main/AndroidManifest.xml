<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.classicgarage.truerandommusicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".activity.PlayerApplication"
        android:allowBackup="true"
        android:icon="@drawable/trmp_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".service.PlayerService" />
        <service android:name=".service.MusicService" />

        <activity android:name=".activity.SongListActivity" />
        <activity
            android:name=".activity.MusicPlayerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".broadcastreceiver.MediaButtonBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />

                <category android:name="android.intent.categoy.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.AllSongsActivity" />
        <activity android:name=".activity.FavSongsActivity" />

        <receiver android:name=".PlayerWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.skywang.widget.UPDATE_ALL" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@layout/appwidget_info" />
        </receiver>

        <activity android:name=".activity.LockScreenActivity"></activity>
    </application>

</manifest>